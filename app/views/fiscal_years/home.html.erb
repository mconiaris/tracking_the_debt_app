<h2>Summary of Receipts, Outlays, and Surpluses or Deficits</h2>
<nav>
  <ul id="receipts">
    <li id="main">Receipts & Outlays:</li>
    <li id="current">Current Dollars</li>
    <li id="constant">Constant (2009) Dollars</li>
    <li id="gdp">As Percentage of GDP</li>
  </ul>
  <ul id="deficit">
    <li id="main">Surplus or Deficit:</li>
    <li id="current">Current Dollars</li>
    <li id="constant">Constant (2009) Dollars</li>
    <li id="gdp">As Percentage of GDP</li>
  </ul>
  <div id="graphdiv">
  </div>
</nav>

<script>
$("#receipts li").on("click", function(e) {
  e.preventDefault();
  console.log($(this).text() + " clicked");
});
</script>

<script>
$("#deficit li").on("click", function(e) {
  e.preventDefault();
  console.log($(this).text() + " clicked");
});
</script>

<script type="text/javascript">
  g = new Dygraph(

    // containing div
    document.getElementById("graphdiv"),

    // CSV or path to a CSV file.
    <%= current_dollars %>,
    {
      labels: [ "Fiscal Year", "Receipts", "Outlays" ],
      drawPoints: true,
      xlabel:"Fiscal Year",
      ylabel:"Percentage Surplus or Deficit",
      title: "In Current Dollars: 1940-2019",
      titleHeight: 25,
      pointSize: 2,
      // TODO: If statement that turns surplus green
      colors: ["green", "red"],
      axisLabelFontSize: 12
    }
  );
</script>



