    );
  });


  $("#deficit li#current").on("click", function(e) {
    e.preventDefault();
    console.log("Deficits " + $(this).text() + " clicked");
    g = new Dygraph(

      // containing div
      document.getElementById("graphdiv"),

      // CSV or path to a CSV file.
      <%= surplus_deficit_current_dollars %>,
      {
        labels: [ "Fiscal Year", "Surplus/Deficit" ],
